{
    "version": 2,
    "builds": [
      {
        "src": "./src/app.ts",
        "use": "@vercel/node"
      }
    ],
    "scripts": {
    "build": "yarn build"
  },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/src/app.ts"
      }
    ],
    "env": {
      "NODE_ENV": "production",
      "PORT": "3000"
    }
  }